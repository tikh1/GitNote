{
  "name": "gitnote",
  "displayName": "GitNote",
  "description": "GitNote allows developers to leave notes for specific users within files. Users with the extension can easily view and manage their notes.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gitnote",
          "title": "GitNote",
          "icon": "resources/icon.png"
        }
      ]
    },
    
    "views": {
      "gitnote": [
        {
          "id": "gitnote-welcome",
          "name": "Loooooking for .git folder",
          "when": "gitnote.initialized === false"
        },
        {
          "id": "gitnote-NotesToMe",
          "name": "Notes To Me",
          "icon": "resources/icon.png",
          "when": "gitnote.initialized"
        },
        {
          "id": "gitnote-NotesFromMe", 
          "name": "Notes From Me",
          "icon": "resources/icon.png",
          "when": "gitnote.initialized"
        }
      ]
    },
    
    
    "viewsWelcome": [
      {
        "view": "gitnote-welcome",
          "contents": "GitNote uses the “.git” folder to view notes, but it seems unable to locate the “.git” folder.\n[GitNote'u Başlat](command:gitnote.initialize)",
        "when": "!gitnote.initialized"
      }
    ],
    

    "commands": [
      {
        "command": "gitnote.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "gitnote.createNote",
        "title": "Create Note",
        "icon": "$(add)"
      },
      {
        "command": "gitnote.showMyNotes",
        "title": "Show My Notes",
        "icon": "$(list-unordered)"
      },
      {
        "command": "gitnote.initialize",
        "title": "Initialize GitNote",
        "icon": "$(rocket)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
